<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_bg"
    tools:context=".Login_2_wsdActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="20.3dp"
                android:src="@drawable/sudo" />

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#00000000"
                android:fontFamily="@font/open_sans_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/black"
                android:textColorHint="#848484" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:background="@color/black" />

            <EditText
                android:id="@+id/et_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="38.8dp"
                android:background="#00000000"
                android:fontFamily="@font/open_sans_regular"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="6"
                android:textColor="@color/black"
                android:textColorHint="#848484" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="9dp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.9dp"
                android:fontFamily="@font/roboto_light"
                android:text="Forget Password?"
                android:textColor="@color/black"
                android:textSize="13.4sp" />

            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.3dp"
                android:background="@drawable/gradient2"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:letterSpacing=".5"
                android:padding="20dp"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="20.4sp" />

            <Button
                android:id="@+id/btn_reg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30.3dp"
                android:background="@drawable/gradient3"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:padding="20dp"
                android:text="Sign up"
                android:textColor="@color/white"
                android:textSize="20.4sp" />



        </LinearLayout>
    </ScrollView>

</RelativeLayout>